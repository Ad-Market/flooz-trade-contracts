{
  "name": "saveyourassets-contracts",
  "version": "0.1.0",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:tracer": "hardhat compile && hardhat test --logs",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --max-warnings 0 .",
    "prettier": "prettier 'contracts/**/*.sol' -w && prettier '**/*.js' -w && prettier '**/*.ts' -w",
    "coverage": "hardhat compile && hardhat coverage",
    "deploy:testnet": "hardhat compile && hardhat deploy --network testnet && npx hardhat etherscan-verify --network testnet",
    "deploy:mainnet": "hardhat compile && hardhat deploy --network mainnet",
    "deploy:localhost": "hardhat compile && hardhat deploy --network localhost",
    "deploy:hardhat": "hardhat compile && hardhat deploy --network hardhat",
    "flatten": "./tasks/flatten.sh",
    "clean": "hardhat clean"
  },
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@uniswap/lib": "1.1.1",
    "@uniswap/v2-core": "^1.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^6.0.5",
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.19",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "*",
    "hardhat-typechain": "^0.3.5",
    "solc": "0.6.8",
    "truffle-flattener": "^1.5.0"
  },
  "devDependencies": {
    "@eth-optimism/smock": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "csv-parse": "^4.15.4",
    "debug": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "ethereum-waffle": "^3.2.0",
    "hardhat": "^2.0.3",
    "hardhat-dependency-compiler": "^1.1.1",
    "hardhat-deploy": "^0.7.5",
    "hardhat-ethernal": "^0.2.3",
    "hardhat-log-remover": "^2.0.1",
    "pancakeswap-peripheral": "^1.1.0-beta.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.60",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.13",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.0.5"
  }
}
